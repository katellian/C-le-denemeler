#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <conio.h>
#include<locale.h>

int main()
{   
setlocale(LC_ALL,"Turkish");
srand(time(NULL));


    int i,yazi=1,tura=0,para;

    
        para=rand()%2;
        if(para==yazi){
		printf("yazı kazandı ");
		system("color 31");
		}
        
        if(para==tura)
        {
		printf("tura kazandı ");
		system("color 78");
		}
    
 
    getch();
 return 0;
}
